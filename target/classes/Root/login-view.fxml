            <TextField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Username:" />
            <Label prefHeight="17.0" prefWidth="68.0" text="Password:" GridPane.rowIndex="2" />
            <Button centerShape="false" onAction="#onRegisterButtonClick" prefHeight="25.0" prefWidth="189.0" text="Register Instead" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
         <Label fx:id="username_error" prefHeight="17.0" prefWidth="293.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Label fx:id="password_error" prefHeight="17.0" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </children>
    </GridPane>
</VBox>
